<div class="row">
    <div class="col-4"></div>
    <div class="col-4">
        <h2 class="text-center">Добро пожаловать!</h2>
        <h2 class="text-center">Войдите, чтобы продолжить</h2>
        <% flash.each do |_, msg| %>
            <h3 class="text-center" style="color: red"><%= msg %></h3>
        <% end %>
        <%= form_with url: session_create_path, method: :post, local: true do |form| %>
            <div class="mb-3">
                <%= form.label :login, 'Логин: ' , class: 'form-label' %>
                <%= form.text_field :login, require: true, class: 'form-control' %>
            </div>
            <div class="mb-3">
                <%= form.label :num, 'Пароль: ', class: 'form-label' %>
                <%= form.password_field :password, require: true, class: 'form-control'%>
            </div>
            <%= form.submit value: 'Войти', require: true, class: 'btn btn-primary col-md-12' %>
        <% end %>
    </div>
    <div class="col-4"></div>
</div>
<br>
<div class="row">
    <div class="col-4"></div>
    <div class="col-4">
        <p class="text-center">Еще нет аккаунта?</p>
        <%= link_to 'Регистрация', users_new_path, class: 'btn btn-primary col-md-12' %>
    </div>
    <div class="col-4"></div>
</div>
