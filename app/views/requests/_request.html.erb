<div id="<%= dom_id request %>">
    <div class="row">
        <div class="col-6">
            <p>Этаж:  <%= request.floor%></p>
            <p>Место: <%= request.location %></p>
            <p>Проблема: <%= request.problem %></p>
        </div>
        <div class="col-6">
            <div class="text-center">
                <p><%= request.status %></p>
                <%= link_to 'Редактировать', edit_request_path(request) %>
                <%= button_to "Удалить заявку", request, method: :delete, class: 'btn btn-primary col-md-10 mt-2' %>
            </div>
        </div>
    </div>
</div>
