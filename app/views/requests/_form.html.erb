<div class="row m-3">
    <div class="col-4">
        <%= form_with(model: request) do |form| %>
            <% if request.errors.any? %>
                <div style="color: red">
                    <h2><%= pluralize(request.errors.count, "error") %> prohibited this request from being saved:</h2>

                    <ul>
                        <% request.errors.each do |error| %>
                            <li><%= error.full_message %></li>
                        <% end %>
                    </ul>
                </div>
            <% end %>

            <div class="mb-3">
                <%= form.label :floor, 'Сотрудник', class: 'form-label' %>
                <%= form.select :staff_id, Staff.order(:rank).map { |staff| [staff.rank, staff.id] }, class: 'form-select' %>
            </div>

            <div class="mb-3">
                <%= form.label :floor, 'Этаж', class: 'form-label' %>
                <%= form.select :floor, ['2', '3', '4', '5', '6', '7', '8'], select: '2', class: 'form-select' %>
            </div>

            <div class="mb-3">
                <%= form.label :location, 'Место: ', class: 'form-label' %>
                <%= form.text_field :location, require: true, class: 'form-control' %>
            </div>

            <div class="mb-3">
                <%= form.label :problem, 'Проблема: ', class: 'form-label' %>
                <%= form.text_area :problem, require: true, class: 'form-control' %>
            </div>

            <div>
                <%= form.submit value: 'Оправить', class: 'btn btn-primary col-md-6' %>
            </div>
        <% end %>
    </div>
</div>
